{
  "name": "grit",
  "productName": "Grit",
  "version": "1.0.0",
  "description": "A Markdown editor for blogging with static site generators",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint"
  },
  "keywords": [],
  "author": "klechelt",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "grit_forge"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "codemirror": "5.46.0",
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "3.2.0",
    "git-root-dir": "1.0.2",
    "hotkeys-js": "3.6.2",
    "htm": "2.1.1",
    "preact": "8.4.2",
    "simple-git": "1.110.0",
    "user-home": "2.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.34",
    "@electron-forge/maker-deb": "6.0.0-beta.34",
    "@electron-forge/maker-rpm": "6.0.0-beta.34",
    "@electron-forge/maker-squirrel": "6.0.0-beta.34",
    "@electron-forge/maker-zip": "6.0.0-beta.34",
    "babel-eslint": "^10.0.1",
    "electron": "5.0.0-beta.9",
    "electron-reloader": "0.2.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0"
  }
}
